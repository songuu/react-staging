{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es2017",
    "allowJs": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "declaration": false,
    "moduleResolution": "node",
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "noEmit": false
  },
  "references": [
    {
      "paths": "./packages/core"
    }
  ],
  "exclude": ["**/node_modules", "**/dist/"],
  "include": ["./packages/core"]
}
